{
	"env":{
		 "browser":true,
		 "es2021":true
	},
	"extends":[
		 "eslint:recommended",
		 "plugin:@typescript-eslint/recommended",
		 "prettier"
	],
	"parser":"@typescript-eslint/parser",
	"parserOptions":{
		 "ecmaVersion":"latest",
		 "sourceType":"module"
	},
	"plugins":[
		 "@typescript-eslint",
		 "check-file"
	],
	"rules":{
		 "linebreak-style":[
				"error",
				"unix"
		 ],
		 "quotes":[
				"error",
				"single"
		 ],
		 "semi":[
				"error",
				"always"
		 ],
		 "check-file/filename-naming-convention":[
			"error",
			{
				"*.spec.{js,ts}":"*",
				"**/jest.config.ts":"*",
				 "*.{js,ts}":"KEBAB_CASE"
			}
	 ]
	}
}
