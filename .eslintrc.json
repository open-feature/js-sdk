{
	"env":{
		 "browser":true,
		 "es2021":true
	},
	"extends":[
		 "eslint:recommended",
		 "plugin:@typescript-eslint/recommended",
		 "prettier",
		 "plugin:jsdoc/recommended"
	],
	"parser":"@typescript-eslint/parser",
	"parserOptions":{
		 "ecmaVersion":"latest",
		 "sourceType":"module"
	},
	"plugins":[
		 "@typescript-eslint",
		 "check-file",
		 "jsdoc"
	],
	"rules":{
		 "linebreak-style":[
				"error",
				"unix"
		 ],
		 "quotes":[
				"error",
				"single"
		 ],
		 "semi":[
				"error",
				"always"
		 ],
		 "check-file/filename-naming-convention":[
			"error",
			{
				"**/*.{js,ts}":"KEBAB_CASE"
			},
      {
      	"ignoreMiddleExtensions": true
      }
		]
	}
}
